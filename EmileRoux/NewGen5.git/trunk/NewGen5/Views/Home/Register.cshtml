@{
ViewData["Title"] = "Register";
 Layout = "~/Views/Shared/_RegisterLayout.cshtml";


}
<div class="container">
<div class="row">
<h1>Register</h1>
        </div>
  <div class="row">
  <div class="col-3"></div>
        <div class="col-sm-6">
            <br/>
        <form>

            <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Surname</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Initials</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>ID Number</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Work Telephone</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Cell Phone</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Physical Address</label>
                            <textarea class="form-control" required></textarea>
                        </div><div class="form-group">
                            <label>Postal Address</label>
                            <textarea class="form-control" required></textarea>
                        </div>

                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" href="#confirmationmodal"  data-toggle="modal" class="btn btn-info" value="Save">

        </form>
            </div>
        <div class="col-3"></div>

        
        
</div>
</div>

<div id="confirmationmodal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Registration confirmation</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Welcome...</p>
                        <p><a asp-area="" asp-controller="Home" asp-action="Index">Click here to login</a></p>
                    </div>
                

                </form>
            </div>
        </div>
    </div>
