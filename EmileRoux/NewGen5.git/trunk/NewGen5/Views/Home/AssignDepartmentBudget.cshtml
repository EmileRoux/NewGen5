@{
ViewData["Title"] = "AssignDepartmentBudget";
}
<div class="row">
<div class="container">
 

    <div class="col-sm-6">

    <h2>Assign Department Budget</h2>
    <form>

        <div class="form-group">
        <label>Department</label>
        <select class="form-control">
                <option>Finance</option>
                <option>IT</option>
                 <option>Law</option>
                

        </select>
            

        </div>


        <div class="form-group">
        <label>Budget</label>

            <input type="number" class="form-control">


        </div>
        <p>
      <a href="#confirmationModal" class="btn btn-primary" data-toggle="modal"> <span>Assign</span></a>
                   
                
       </p> 
       <br/>



    </form>





</div>
        </div>
       
</div>
<div id="confirmationModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Assign Department Budget</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to assign this department budget?</p>
                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Assign">
                    </div>
                </form>
            </div>
        </div>
    </div>
 

